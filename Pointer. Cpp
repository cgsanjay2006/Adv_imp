#include <iostream>
#include <string>
using namespace std;

class Car
{
public:
    string brand;
    int year;

    void display()
    {
        cout << "Brand: " << brand << endl;
        cout << "Year: " << year << endl;
    }
};

int main()
{
    Car c1;

    c1.brand = "Toyota";
    c1.year = 2022;

    c1.display();

    cout << "\nUsing pointer to access members:" << endl;

    Car* ptr = &c1;

    cout << "Brand: " << ptr->brand << endl;
    cout << "Year: " << ptr->year << endl;

    return 0;
}
