
#include <iostream>
using namespace std;
class substract
{public:
    int* sub(int* n1,int* n2)
    {
      int *p=new int(*n1-*n2);
      return p;
    }
};
int main()
{
  int *n1=new int(10),*n2=new int(5);
  substract s1;
    
  int* result=s1.sub(n1,n2);
  cout << "result = " << *result << endl;
  delete result;
  delete n1;
  delete n2;
  return 0;
}